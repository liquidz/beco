#!/bin/bash

DOCKER=docker
SESSION_ROOT=$(pwd)
SHARED_DIR="/shared"
RM=/bin/rm

if [[ "$BECOROOT" = "" ]]; then
    BECOROOT=`dirname "$0"`
fi
. $BECOROOT/def/version.def

usage_and_exit () {
    cat <<EOT

beco ver $VERSION

Usage)
  beco COMMAND (ARGS ...)
Option)
  -i : Enables interactive tty
  -c : Specify command
  -s : Specify path to store session file
  -h : Show this help
  -d : Dry run mode
  -v : Show version
Example)
  beco go verion
  beco -c go go version
  beco -c go hostname
  beco -i -c go bash

EOT
    exit 0
}

version_and_exit () {
    echo "beco ver $VERSION"
    exit 0
}

## docker の存在確認
if [[ "$IGNORE_TO_CHECK_DOCKER" = "" ]]; then
    if ! which $DOCKER > /dev/null 2>&1; then
        echo "$DOCKER must be installed."
        exit 1
    fi
fi

## 引数のパース
while getopts c:s:hivd OPT; do
    case $OPT in
        c)
            CMD=$OPTARG
            ;;
        s)
            SESSION_ROOT=$OPTARG
            if [[ ! -d $SESSION_ROOT ]]; then
                echo "does not exists: $SESSION_ROOT"
                exit 1
            fi
            ;;
        i)
            INTERACTIVE_TTY="-it"
            ;;
        v)
            version_and_exit
            ;;
        d)
            DRYRUN=1
            ;;
        h)
            usage_and_exit
            ;;
    esac
done
shift $((OPTIND - 1))

## 実行してようとしているコマンド毎の定義の読み込み
if [[ "$CMD" = "" ]]; then
    CMD=$1
fi
DEF_FILE=$BECOROOT/def/${CMD}.def
if [[ ! -e $DEF_FILE ]]; then
    echo "$CMD is not supported"
    exit 1
fi
. $DEF_FILE

if [[ "$COMMAND" = "" ]]; then
    COMMAND="ping localhost"
fi

## セッションの確認
if ! test $DRYRUN; then
    IMAGE_NAME=$(echo "$IMAGE" | sed 's![/:]!_!g')
    SESSION_FILE="$SESSION_ROOT/.beco_${IMAGE_NAME}_session"
    if [[ -e $SESSION_FILE ]]; then
        SESSION_CONTAINER=$(cat $SESSION_FILE)
        $DOCKER ps --no-trunc -q | grep $SESSION_CONTAINER > /dev/null 2>&1
        if [[ $? -ne 0 ]]; then
            SESSION_CONTAINER=""
            $RM -rf $SESSION_FILE
        fi
    fi
fi
## セッションがなければ作る
if [[ ! -e $SESSION_FILE ]]; then
    RUN_CMD="$DOCKER run -d -v $(pwd):$SHARED_DIR:rw -w $SHARED_DIR $IMAGE $COMMAND"
    if test $DRYRUN; then
        SESSION_CONTAINER="TEST_CONTAINER"
        echo $RUN_CMD
    else
        SESSION_CONTAINER=$($RUN_CMD)
        echo -n $SESSION_CONTAINER > $SESSION_FILE
    fi
fi

RUN_CMD="$DOCKER exec $INTERACTIVE_TTY $SESSION_CONTAINER $@"
if test $DRYRUN; then
    echo $RUN_CMD
else
    $RUN_CMD
fi
exit $?
